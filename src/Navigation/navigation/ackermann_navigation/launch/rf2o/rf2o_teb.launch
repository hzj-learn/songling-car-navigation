<launch>
	<!--  ****** Maps *****  -->
	<node name="map_server" pkg="map_server" type="map_server" args="/home/xag/Desktop/ack_test/src/navigation/ackermann_navigation/map/blank_map.yaml" output="screen"/>
        <!--  ************** Navigation ***************  -->
	<node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
  	  	<rosparam file="$(find ackermann_navigation)/config/teb/carlike/costmap_common_params.yaml" command="load" ns="global_costmap" />
  	 	<rosparam file="$(find ackermann_navigation)/config/teb/carlike/costmap_common_params.yaml" command="load" ns="local_costmap" />
  		<rosparam file="$(find ackermann_navigation)/config/teb/carlike/local_costmap_params.yaml" command="load" />
  		<rosparam file="$(find ackermann_navigation)/config/teb/carlike/global_costmap_params.yaml" command="load" />
  		<rosparam file="$(find ackermann_navigation)/config/teb/carlike/teb_local_planner_params.yaml" command="load" />

		<param name="base_global_planner" value="global_planner/GlobalPlanner" />
		<param name="planner_frequency" value="1.0" />
		<param name="planner_patience" value="5.0" />

		<param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS" />
		<param name="controller_frequency" value="5.0" />
		<param name="controller_patience" value="15.0" />

                <param name="clearing_rotation_allowed" value="false" /> <!-- Our carlike robot is not able to rotate in place -->
	</node>

	  <!--  **************** Visualisation ****************  -->
	  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find ackermann_navigation)/config/rviz_navigation.rviz"/>

</launch>
